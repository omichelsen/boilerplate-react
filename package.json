{
  "name": "boilerplate-react",
  "version": "1.0.0",
  "description": "Boilerplate with React+Webpack+TypeScript",
  "repository": {
    "type": "git",
    "url": "git@github.com:omichelsen/boilerplate-react.git"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "webpack --mode production",
    "build:stats": "webpack --mode production --json > stats.json",
    "coverage": "nyc mocha --reporter progress",
    "lint": "tslint 'src/**/*.{ts,tsx}' --format stylish",
    "start": "webpack-dev-server --hot --mode development",
    "test": "npm run lint && npm run coverage",
    "test:watch": "mocha --watch --reporter min"
  },
  "author": "Ole Michelsen",
  "license": "MIT",
  "dependencies": {
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.4",
    "redux-logger": "^3.0.6",
    "redux-promise-middleware": "^6.1.0",
    "redux-promise-middleware-actions": "^2.1.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/enzyme": "^3.10.3",
    "@types/mocha": "^5.2.7",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-redux": "^7.1.1",
    "@types/react-router": "^5.0.3",
    "@types/react-router-dom": "^4.3.4",
    "@types/react-router-redux": "^5.0.18",
    "@types/redux-actions": "^2.6.1",
    "@types/redux-promise": "^0.5.28",
    "@types/sinon-chai": "^3.2.2",
    "@types/webpack-env": "^1.14.0",
    "autoprefixer": "^9.6.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "css-loader": "^1.0.1",
    "deepmerge": "^4.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "file-loader": "^4.1.0",
    "html-webpack-plugin": "^3.2.0",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "offline-plugin": "^5.0.7",
    "postcss-loader": "^3.0.0",
    "react-hot-loader": "^4.12.10",
    "react-test-renderer": "^16.8.6",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3",
    "typings-for-css-modules-loader": "^1.7.0",
    "url-loader": "^2.1.0",
    "web-app-manifest-loader": "^0.1.1",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1"
  },
  "engines": {
    "node": ">=8"
  },
  "nyc": {
    "exclude": [
      "src/**/*.test.*",
      "test/**/*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
