{
  "name": "boilerplate-react",
  "version": "1.0.0",
  "description": "Boilerplate with React+Webpack+TypeScript",
  "repository": {
    "type": "git",
    "url": "git@github.com:omichelsen/boilerplate-react.git"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "webpack --env production",
    "build:stats": "webpack --env production --json > stats.json",
    "coverage": "NODE_ENV=test nyc mocha --reporter progress",
    "lint": "tslint 'src/**/*.{ts,tsx}' --format stylish",
    "start": "webpack-dev-server",
    "test": "npm run lint && npm run coverage",
    "test:watch": "mocha --watch --reporter min"
  },
  "author": "Ole Michelsen",
  "license": "MIT",
  "dependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/enzyme": "^2.8.12",
    "@types/mocha": "^2.2.43",
    "@types/react": "^16.0.10",
    "@types/react-dom": "^16.0.1",
    "@types/react-hot-loader": "^3.0.4",
    "@types/sinon-chai": "^2.7.29",
    "@types/webpack-env": "^1.13.2",
    "autoprefixer": "^7.1.5",
    "awesome-typescript-loader": "^3.2.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-enzyme": "^0.8.0",
    "copy-webpack-plugin": "^4.1.1",
    "css-loader": "^0.28.7",
    "deepmerge": "^2.0.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "mocha": "^4.0.1",
    "nyc": "^11.2.1",
    "offline-plugin": "^4.8.4",
    "postcss-loader": "^2.0.8",
    "pug": "^2.0.0-rc.4",
    "pug-loader": "^2.3.0",
    "react-addons-test-utils": "^15.6.2",
    "react-hot-loader": "^3.0.0",
    "react-test-renderer": "^16.0.0",
    "sinon": "^4.0.1",
    "sinon-chai": "^2.14.0",
    "source-map-loader": "^0.2.2",
    "style-loader": "^0.19.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.3",
    "url-loader": "^0.6.2",
    "web-app-manifest-loader": "^0.1.1",
    "webpack": "^3.7.1",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.0"
  },
  "engines": {
    "node": ">=8"
  },
  "nyc": {
    "exclude": [
      "src/**/*.test.*",
      "test/**/*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
