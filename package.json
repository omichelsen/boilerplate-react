{
  "name": "boilerplate-react",
  "version": "1.0.0",
  "description": "Boilerplate with React+Webpack+TypeScript",
  "repository": {
    "type": "git",
    "url": "git@github.com:omichelsen/boilerplate-react.git"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "webpack --env production",
    "build:stats": "webpack --env production --json > stats.json",
    "coverage": "NODE_ENV=test nyc mocha --reporter progress",
    "lint": "tslint 'src/**/*.{ts,tsx}' --format stylish",
    "start": "webpack-dev-server",
    "test": "npm run lint && npm run coverage",
    "test:watch": "mocha --watch --reporter min"
  },
  "author": "Ole Michelsen",
  "license": "MIT",
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "redux-actions": "^2.2.1",
    "redux-logger": "^3.0.6",
    "redux-promise": "^0.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.1",
    "@types/chai-as-promised": "^7.1.0",
    "@types/enzyme": "^3.1.7",
    "@types/mocha": "^5.2.5",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-redux": "^6.0.6",
    "@types/react-router": "^4.0.20",
    "@types/react-router-dom": "^4.2.3",
    "@types/react-router-redux": "^5.0.11",
    "@types/redux-actions": "^2.2.3",
    "@types/redux-promise": "^0.5.28",
    "@types/sinon-chai": "^3.2.0",
    "@types/webpack-env": "^1.13.3",
    "autoprefixer": "^9.1.3",
    "awesome-typescript-loader": "^5.2.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^1.0.0",
    "deepmerge": "^2.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "less": "^3.8.1",
    "less-loader": "^4.0.5",
    "mocha": "^5.0.0",
    "nyc": "^12.0.2",
    "offline-plugin": "^5.0.5",
    "postcss-loader": "^3.0.0",
    "pug": "^2.0.0-rc.4",
    "pug-loader": "^2.3.0",
    "react-hot-loader": "^4.3.5",
    "react-test-renderer": "^16.2.0",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.2.0",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.22.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.9.1",
    "tslint-react": "^3.4.0",
    "typescript": "^3.0.1",
    "url-loader": "^1.1.1",
    "web-app-manifest-loader": "^0.1.1",
    "webpack": "^4.17.1",
    "webpack-dev-server": "^3.1.5",
    "webpack-merge": "^4.1.1"
  },
  "engines": {
    "node": ">=8"
  },
  "nyc": {
    "exclude": [
      "src/**/*.test.*",
      "test/**/*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
