{
  "name": "boilerplate-react",
  "version": "1.0.0",
  "description": "Boilerplate with React+Webpack+TypeScript",
  "repository": {
    "type": "git",
    "url": "git@github.com:omichelsen/boilerplate-react.git"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "webpack --env production",
    "build:stats": "webpack --env production --json > stats.json",
    "coverage": "NODE_ENV=test nyc mocha --reporter progress",
    "lint": "tslint 'src/**/*.{ts,tsx}' --format stylish",
    "start": "webpack-dev-server",
    "test": "npm run lint && npm run coverage",
    "test:watch": "mocha --watch --reporter min"
  },
  "author": "Ole Michelsen",
  "license": "MIT",
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-logger": "^3.0.6",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.1",
    "@types/chai-as-promised": "^7.1.0",
    "@types/enzyme": "^3.1.7",
    "@types/mocha": "^2.2.46",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-hot-loader": "^3.0.5",
    "@types/react-redux": "^5.0.14",
    "@types/react-router": "^4.0.20",
    "@types/react-router-dom": "^4.2.3",
    "@types/react-router-redux": "^5.0.11",
    "@types/redux-actions": "^2.2.3",
    "@types/redux-promise": "^0.5.28",
    "@types/sinon-chai": "^2.7.29",
    "@types/webpack-env": "^1.13.3",
    "autoprefixer": "^7.2.5",
    "awesome-typescript-loader": "^3.4.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.9",
    "deepmerge": "^2.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "offline-plugin": "^4.9.0",
    "postcss-loader": "^2.0.10",
    "pug": "^2.0.0-rc.4",
    "pug-loader": "^2.3.0",
    "react-hot-loader": "^3.1.3",
    "react-test-renderer": "^16.2.0",
    "sinon": "^4.2.0",
    "sinon-chai": "^2.14.0",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.19.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-react": "^3.4.0",
    "typescript": "^2.6.2",
    "url-loader": "^0.6.2",
    "web-app-manifest-loader": "^0.1.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-merge": "^4.1.1"
  },
  "engines": {
    "node": ">=8"
  },
  "nyc": {
    "exclude": [
      "src/**/*.test.*",
      "test/**/*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
